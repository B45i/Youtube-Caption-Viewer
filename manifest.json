{
    "name": "YT Transcript Viewer",
    "version": "1.0.0",
    "description": "Get transcription of youtube videos.",
    "manifest_version": 3,
    "author": "B45i",
    "permissions": ["tabs"],
    "action": {
        "default_title": "YT Transcript Viewer",
        "default_popup": "popup.html"
    },

    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*", "<all_urls>"],
            "js": ["content-script.js"]
        }
    ]
}
